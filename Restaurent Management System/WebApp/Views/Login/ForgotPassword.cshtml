@{
    ViewData["Title"] = "Forgot Password";
}

<!-- Include site-wide JavaScript file -->
<script src="~/js/site.js" asp-append-version="true"></script>

<!-- Forgot Password Form Container -->
<div class="form_box forgotPassword">
    <h3>Forgot Password</h3>
    <h6>Enter your email to receive a password reset link</h6>
    
    <form method="post" asp-action="SendEmailLink">
        <!-- Email Input Field -->
        <div class="input_box">
            <span class="icon">
                <img src="@Url.Content("~/images/icons/customer.svg")" width="20" height="20">
            </span>
            <input type="email" id="forgotEmail" name="email" required />
            <label>Email</label>
        </div>
        
        <!-- Submit Button -->
        <button type="submit" class="btn btn-primary">Send</button>

        <!-- Back to Login Link -->
        <div class="login-registered">
            <p>
                <a asp-controller="Login" asp-action="Index" class="login-link">Back to Login</a>
            </p>
        </div>
    </form>
</div>

<!-- Script to Pre-fill Email Field from URL Parameter -->
<script>
document.addEventListener("DOMContentLoaded", () => {
    // Get the 'email' parameter from the URL query string
    let encodedEmail = new URLSearchParams(location.search).get("forgotAction");

    // Decode the Base64-encoded email and set it in the input field
    if (encodedEmail) {
        document.getElementById("forgotEmail").value = atob(encodedEmail);
    }
});
</script>

